@page
@model MagazinMobilaOnline.Pages.Comenzi.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comanda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comanda.DataComanda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comanda.DataComanda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comanda.Client.ClientNume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comanda.Client.ClientNume)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-12">
            Produse
        </dt>
    </dl>
    <hr />

    <div class="row">
        <div class="col-6">
            <table class="w-100">
                <thead>
                    <tr>
                        <th>Nume</th>
                        <th>Pret</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        foreach (var product in Model.Comanda.ComandaProduse) {
                            @:<tr>
                                <td>
                                    @product.Produs.Nume
                                </td>

                                <td>
                                    @product.Produs.Pret
                                </td>
                            @:</tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="row mt-3">
        <form method="post">
            <input type="hidden" asp-for="Comanda.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
    
</div>
